<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1 class="text-center"><%= action %> Product</h1>

        <%= form_for(@product) do |product| %>

          <% if @product.errors.any? %>
            <div class="error_explanation">
              <h2><%= pluralize(@product.errors.count, "error")%> prohibited this product from being save:</h2>

              <ul>
                <% @product.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= product.label :name %>
            <%= product.text_field :name, class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= product.label :price %>
            <%= product.number_field :price, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= product.label :categories %>
            <%= product.collection_check_boxes :category_ids, Category.all, :id, :name %>
          </div>

          <div class="actions">
            <%= link_to 'Cancel',products_path, class: 'btn btn-danger' %>
            <%= product.submit 'Save Product', class: 'btn btn-success' %>
          </div>

        <% end %>
    </div>

  </div>

</div>

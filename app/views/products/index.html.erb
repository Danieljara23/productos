<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Products</h1>
      <%= link_to "New_Product",new_product_path, class: "btn btn-primary" %>
      <table class="table">
        <thead>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Categor√≠as</th>
          <th></th>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name%></td>
              <td>$<%= product.price%></td>
              <td><%= product.categories.map(&:name).sort.join(", ")%></td>
              <td>
                  <%= link_to 'Edit',edit_product_path(product) %>
                  <%= link_to 'Remove',product, method: :delete,data: {confirm: 'Are you sure to delete this product?'} %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
